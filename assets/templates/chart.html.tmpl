  <script src="/assets/static/js/Chart.min.js"></script>

</head>

<body>


  <div align="center" style="padding-top:100px">
      <div style="width:800px;height:600px">
          <canvas id="myChart"></canvas>
      </div>
    </div>
  </div>



    <script>

      $(document).ready(function() {

        var labelData = {{.label_data}}
        var dateData = {{.graph_data}}

        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
          type: 'line',
          data: {
              labels: labelData,
              datasets: [{
                  label: '# of Guests',
                  data: dateData,
                  backgroundColor: [
                      'rgba(66, 107, 231, 0.2)',
                      'rgba(255, 206, 86, 0.2)',
                      'rgba(75, 192, 192, 0.2)',
                      'rgba(153, 102, 255, 0.2)',
                      'rgba(255, 159, 64, 0.2)'
                  ],
                  borderColor: [
                      'rgba(66, 107, 231, 1)',
                      'rgba(255, 206, 86, 1)',
                      'rgba(75, 192, 192, 1)',
                      'rgba(153, 102, 255, 1)',
                      'rgba(255, 159, 64, 1)'
                  ],
                  borderWidth: 1
              }]
          },
          maintainAspectRatio: false,
          options: {
              scales: {
                  yAxes: [{
                      ticks: {
                          beginAtZero:true
                      }
                  }]
              }
          }
        });
      });
    </script>


</body>
</html>
