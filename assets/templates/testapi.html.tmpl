   </table>

    <form action="/create_activeparty" method="POST">
        <label for="RestaurantID" class="sr-only">RestaurantID</label>
        <input name="RestaurantID"></input>

        <label for="PartyName" class="sr-only">PartyName</label>
        <input name="PartyName"></input>

        <label for="PartySize" class="sr-only">PartySize</label>
        <input name="PartySize"></input>

        <label for="PhoneAhead" class="sr-only">PhoneAhead</label>
        <input name="PhoneAhead"></input>

        <label for="IsTableReady" class="sr-only">IsTableReady</label>
        <input name="IsTableReady"></input>
        <button type="submit">Check ID</button>
    </form>
    <button class="test">Test activeParty</button>
</body>
<script>
    $('.test').click( function(element) {
        var data = { "active_party_id" : "0" };
        $.ajax({
