<!DOCTYPE html>
<html lang="en">

<title>Analytics | Buzzer</title>


<head>
{{ template "header.html.tmpl" .}}
<!-- JS file for chart creation -->
<script src="/assets/static/js/Chart.min.js"></script>
</head>

<body>
{{ template "navbar.html.tmpl" .}}
<div class="row login-alert">
  <div id="alert_placeholder"></div>
</div>

<title>Analytics | Buzzer</title>

<script>
    console.log($('.input-daterange input') === undefined)
    $(document).ready(function(){
        $('.input-daterange input').each(function() {
            $(this).datepicker({
                format: "mm/dd/yyyy",
                startDate: "01/01/2000",
                endDate: ""
            });
        });
    });

</script>

<div class="container">
  <div class="row">
        <div class="input-group input-daterange">
            <input type="text" class="form-control startDate" value="10/01/2016">
            <div class="input-group-addon">to</div>
            <input type="text" class="form-control endDate" value="10/29/2016">
        </div>
    </div>
</div>

  <!-- div for basic chart loaded on render -->
  <div class="container" style="padding-top:10px">
    <div class="row">
      <div id="historical_parties" class="col-md-12">
        <button class="btn btn-default get_average_party_chart_button" type="button">Avg Party Size Chart</button>
        <button class="btn btn-default get_total_party_chart_button" type="button">Total Customers Chart</button>
        <button class="btn btn-default get_parties_hour_chart_button" type="button">Parties Per Hour Chart</button>
      </div>
    </div>
  </div>

  <div align="center" style="padding-top:30px">
      <div style="width:800px;height:600px">
          <canvas id="analyticsLineChart"></canvas>
      </div>
    </div>
  </div>



</body>
</html>
